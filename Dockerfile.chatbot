# Use official Python image
FROM python:3.11

# Set working directory
WORKDIR /app

# Copy requirements first for caching
COPY requirements.txt .

# Install dependencies
RUN pip install --no-cache-dir -r requirements.txt

# (Optional but effective) Precompile Python bytecode
RUN python -m compileall /usr/local/lib/python3.11

# (Optional) Warm up heavy imports to avoid slow first-time imports
RUN echo "import langchain, langchain_community, langchain_huggingface" > /tmp/warmup.py && python /tmp/warmup.py

# Copy application code
#COPY . .

# Expose Streamlit port
EXPOSE 8501

# Run Streamlit app
#CMD ["streamlit", "run", "app.py", "--server.port=8501", "--server.address=0.0.0.0"]
